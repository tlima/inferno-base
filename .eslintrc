{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb-base", "plugin:inferno/recommended"],
  "globals": {
    "__webpack_hash__": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": "webpack",
    "inferno": {
      "createClass": "createClass",
      "pragma": "Inferno"
    },
    "propWrapperFunctions": [ "forbidExtraProps" ]
  },
  "rules": {
    "object-curly-newline": 0,
    "react/jsx-one-expression-per-line": 0,
    "no-plusplus": 0
  },
  "plugins": ["inferno"]
}
